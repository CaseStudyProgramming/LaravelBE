{
    "openapi":"3.0.2",
    "info": {
      "title":"Adress API",
      "version":"1.0"
    },
    "servers": [
      {"url":"http://localhost:8000"}
    ],
    "paths": {
        "/api/contacts/{id}/addresses":{
            "post":{
                "description": "Create new address",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    },
                    {
                        "name": "idContact",
                        "in": "path"
                    }
                ],
                "requestBody":{
                    "description": "Create new address",
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "street":{
                                        "type": "string"
                                    },
                                    "city":{
                                        "type": "string"
                                    },
                                    "province":{
                                        "type": "string"
                                    },
                                    "country":{
                                        "type": "string"
                                    },
                                    "pastal_code":{
                                        "type": "string"
                                    }

                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200":{
                        "description": "Succes create address",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "properties": {
                                        "data":{
                                            "type": "object"
                                        },
                                        "errors":{
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

            },
            "get":{
               "description": "Get list addresses"
            }
        },
        "/api/contacts/{idContact}/addresses/{idAddress}":{
            "get":{
                "description": "Get address"
            },
            "put":{
                "description": "Update address"
            },
            "delete":{
                "description": "Delete address"
            }
        }
    }
  }
